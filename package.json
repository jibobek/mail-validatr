{
  "name": "mail-validatr",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/core/index.js",
  "module": "./dist/core/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": "./dist/cli/cli.js"
  },
  "bin": {
    "mail-validatr": "./dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli/cli.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/cli/cli.ts --format esm,cjs --dts --watch",
    "test:watch": "vitest watch",
    "dev:test": "concurrently \"npm:dev\" \"npm:test:watch\""
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/yargs": "^17.0.33",
    "concurrently": "^9.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
